<h1>New Product</h1>

<%= form_for(@product) do |p| %>
<%= label(:product, :category_id)%><br>
<%= collection_select(:product,:category_id, Category.all, :id, :name)%><br>
<%= label(:product, :name) %><br>
<%= p.text_field :name %><br>
<%= label(:product, :description) %><br>
<%= p.text_area :description %><br>
<%= label(:product, :image) %><br>
<%= p.text_field :image %><br>
<%= label(:product, :quantity) %><br>
<%= p.number_field :quantity, min: 0 %><br>
<%= label(:product, :price) %><br>
<%= p.number_field :price, min: 0 %><br>
<%= p.submit "Edit Product" %> <%end%> 

<%= link_to 'Back', "/" %>
