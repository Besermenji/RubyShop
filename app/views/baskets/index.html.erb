<p id="notice"><%= notice %></p>

<h1>Listing Baskets</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
 <% if @products %>  
  <% @products.each do |p| %>
<tr>
         <td><%= p.name%></td>
         <td><%= p.price %> </td>
      
      


       <td><%=link_to "Remove from basket", "baskets/"+p.id.to_s, method:"delete"%></td> 
      </tr>
    <% end %>
   <% end %>
  </tbody>
</table>

